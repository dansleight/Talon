@{
    ViewBag.Title = "Server Side Processing";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Server Side Processing</h3>
    </div>
    <div class="panel-body">
        @(Html.Talon().Grid<Test.Mvc.Models.PersonModel>()
            .Name("people")
            .Columns(c =>
            {
                c.Bound(m => m.ID);
                c.Bound(m => m.Name);
                c.Bound(m => m.Country);
                c.Bound(m => m.Phone);
                c.Bound(m => m.Email);
            })
            .AjaxSource(Url.Action("ServerSideData", "Grid"))
        )
    </div>
</div>

